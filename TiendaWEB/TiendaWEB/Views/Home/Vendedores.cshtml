@{
    ViewBag.Title = "Registro de Vehículos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <h1 style="font-size: 30px;"> Registro de vehiculos </h1>
                @using (Html.BeginForm("RegistrarVehiculo", "Vehiculos", FormMethod.Post, new { @class = "pt-3" }))
                {             
                    <div class="form-group">
                        @Html.TextBox("Marca", null, new { @class = "form-control form-control-lg", placeholder = "Marca" })
                    </div>
                    <div class="form-group">
                        @Html.TextBox("Modelo", null, new { @class = "form-control form-control-lg", placeholder = "Modelo" })
                    </div>
                    <div class="form-group">
                        @Html.TextBox("Color", null, new { @class = "form-control form-control-lg", placeholder = "Color" })
                    </div>
                    <div class="form-group">
                        @Html.TextBox("Precio", null, new { @class = "form-control form-control-lg", placeholder = "Precio" })
                    </div>

                    <div class="mt-3">
                        <input class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="Registrar Vehículo">
                    </div>
                }

            </div>
        </div>
    </div>
</div>
